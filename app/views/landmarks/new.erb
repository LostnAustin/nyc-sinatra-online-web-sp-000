<h2>Titles</h2>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>">
    <br/>
  <% end %>

  <h2>Create New Title:</h2>
    <input type="text" id="new_title" name="title[name]">

    <h2>Figures</h2>
      <% Figure.all.each do |figure| %>
        <label><%= figure.name %></label>
        <input type="checkbox" id="figure_<%= figure.id %>"  value="<%= figure.id %>">
        <br/>
      <% end %>

      <h2>Create New Figure:</h2>
        <input type="text" id="new_figure" name="Figure[name]">


